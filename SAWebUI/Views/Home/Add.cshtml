@model SAWebUI.Models.CustomerVM

<div class="text-left">
    <div class="login-form" style = "height 700px; width: 500px; margin: auto;">
    <form asp-action = "Add">
        <h2 class="text-center">Customer Sign-up</h2>       
        <div class="form-group">
            <label asp-for="Name" class="form-label">Name</label>
            <input asp-for = "Name" type="text" class="form-control" placeholder="John Doe" required="required">
            <span asp-validation-for = "Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
            <input asp-for= "PhoneNumber" type="text" class="form-control" placeholder="(123)456-7890" required="required">
            <span asp-validation-for = "PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for= "Email" type="text" class="form-control" placeholder="JohnDoe@gmail.com" required="required">
            <span asp-validation-for = "Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for= "Address" class="form-label">Address</label>
            <input asp-for= "Address" type="text" class="form-control" placeholder="123 Main Street, City, ST 12345" required="required">
            <span asp-validation-for = "Address" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for= "Password" class="form-label">Password</label>
            <input asp-for= "Password" type="password" class="form-control" placeholder="Password" required="required">
            <input asp-for= "Manager" type = "hidden" value = "0">
            <span asp-validation-for = "Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Sign Up</button>
        </div>     
    </form>
    <a asp-action="Index" class = "btn btn-danger" style ="position:relative; top:10px;">Back</a>
</div>