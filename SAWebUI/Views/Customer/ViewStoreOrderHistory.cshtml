@model IEnumerable<SAWebUI.Models.OrdersVM>

<!DOCTYPE html>
<html>
<head>
        <meta charset="utf-8" />
        <title></title>
</head>
<body>
    <h1>StoreFront Order History:</h1>
    <table class ="table table-striped table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Customer ID</th>
                <th><div class = btn-toolbar>Price
                <div class = btn-toolbar>
                    @using (Html.BeginForm("ViewStoreOrderHistory", "Customer", FormMethod.Post))       
                    {
                        <input name = "sortOrder" value = "orders_Asc" type = "hidden">
                        <input name = "p_storeID" value = @ViewBag.storeID type = "hidden">
                        <button type = "submit" style = "width: 30px">+</button>
                    }
                    @using (Html.BeginForm("ViewStoreOrderHistory", "Customer", FormMethod.Post))       
                    {
                        <input name = "sortOrder" value = "orders_Desc" type = "hidden">
                        <input name = "p_storeID" value = @ViewBag.storeID type = "hidden">
                        <button type = "submit" style = "width: 30px">-</button>
                    }
                </div>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ord in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(storeOrder => ord.Id)</td>
                    <td>@Html.DisplayFor(storeOrder => ord.CustomerId)</td>
                    <td>$@Html.DisplayFor(storeOrder => ord.Price)</td>
                    <td></td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-controller = "Customer" asp-action="StoreFrontMenu" class = "btn btn-danger" style ="position:relative; top:10px;">Back</a>
</body>
</html>