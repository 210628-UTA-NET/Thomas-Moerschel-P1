@model IEnumerable<SAWebUI.Models.OrdersVM>

<!DOCTYPE html>
<html>
<head>
        <meta charset="utf-8" />
        <title></title>
</head>
<body>
    <h1>Customer Order History:</h1>
    <!-- bootstrap styling for button (autoincluded in VCM) -->
    <table class ="table table-striped table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Store ID</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ord in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(storeOrder => ord.Id)</td>
                    <td>@Html.DisplayFor(storeOrder => ord.StoreId)</td>
                    <td>@Html.DisplayFor(storeOrder => ord.Price)</td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-controller = "Customer" asp-action="Index" class = "btn btn-danger" style ="position:relative; top:10px;">Back</a>
</body>
</html>