@model IEnumerable<SAWebUI.Models.CustomerVM>
<!DOCTYPE html>
<html>
<head>
        <meta charset="utf-8" />
        <title></title>
</head>
<body>
    <h1>List of Customers:</h1>
    <a type="button" class="btn btn-success" asp-action = "Add">Add Customer</a>
    <a type="button" class="btn btn-primary" asp-action = "StoreFrontMenu">StoreFront Menu</a>
    <br>
    <br>
    @using (Html.BeginForm("Index", "Customer", FormMethod.Post))
    {
        <input id= "search" type = "text" name = "custName" class = "input" style = "width: 150px">
        <button type = "submit">Search</button>
    }
    <table class ="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Address</th>
                <th>Email</th>
                <th>PhoneNumber</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(custItem => item.Id)</td>
                    <td>@Html.DisplayFor(custItem => item.Name)</td>
                    <td>@Html.DisplayFor(custItem => item.Address)</td>
                    <td>@Html.DisplayFor(custItem => item.Email)</td>
                    <td>@Html.DisplayFor(custItem => item.PhoneNumber)</td>
                    <td><button class = "btn btn-secondary"> @Html.ActionLink("View Order History", "ViewCustomerOrderHistory", new {p_customerID = item.Id}, new {@style = "color:white"})</button></td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-controller = "Home" asp-action="ManagerLogin" class = "btn btn-danger" style ="position:relative; top:10px;">Logout</a>
</body>

</html>
