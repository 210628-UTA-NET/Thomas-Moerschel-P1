@model IEnumerable<SAWebUI.Models.StoreFrontVM>

<!DOCTYPE html>
<html>
<head>
        <meta charset="utf-8" />
        <title></title>
</head>
<body>
    <h1>List of StoreFronts:</h1>
     <a type="button" class="btn btn-success" asp-action = "Index">Customer Menu</a>
     <br>
     <br>
    <table class ="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Address</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var store in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(storeFront => store.Id)</td>
                    <td>@Html.DisplayFor(storeFront => store.Name)</td>
                    <td>@Html.DisplayFor(storeFront => store.Address)
                    <td>
                        <div btn-toolbar>
                        <button class = "btn btn-primary"> @Html.ActionLink("Manage Inventory", "StoreInventory", new {p_storeID = store.Id}, new {@style = "color:white"})</button>
                        <button class = "btn btn-secondary"> @Html.ActionLink("View Order History", "ViewStoreOrderHistory", new {p_storeID = store.Id, sortOrder = "default"}, new {@style = "color:white"})</button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-controller = "Home" asp-action="ManagerLogin" class = "btn btn-danger" style ="position:relative; top:10px;">Logout</a>
</body>
</html>