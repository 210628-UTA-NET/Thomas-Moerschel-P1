@model IList<SAWebUI.Models.LineItemsVM>
<h1>Store Inventory</h1>
<table class ="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Product</th>
                <th>Avaliable Quantity</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @for(int x = 0; x < Model.Count; x++)
            {
                <tr>
                    <td>@Html.DisplayFor(LineItem => Model[x].Id)</td>
                    <td>@Html.DisplayFor(LineItem => Model[x].Product)</td>
                    <td>@Html.DisplayFor(LineItem => Model[x].Quantity)</td>
                    <td>
                        @using (Html.BeginForm("StoreInventory", "Customer", FormMethod.Post))
                        {
                           <input name = "item.Quantity" size = "4" type = "number" class = "input" value = "1" style = "width:60px"/>
                           <input name = "item.Product" type = "hidden" value = "@Model[x].Product">
                           <input name = "item.Id" type = "hidden" value = "@Model[x].Id">
                           <input name = "item.storeId" type = "hidden" value = "@Model[x].storeID">
                           <button type = "submit" class = "btn btn-secondary"> Add </button>
                        }
                       
                    </td>
                </tr>
            }
            
        </tbody>
    </table>
    <a asp-action="StoreFrontMenu" class = "btn btn-danger" style ="position:relative; top:10px;">Back</a>